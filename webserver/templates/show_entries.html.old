{% extends "layout.html" %}
{% block body %}
{% if session.logged_in %}
<select name="flip-1" id="flip-1" data-role="slider" class="switch">
	<option value=0>Off</option>
	<option value=1>On</option>
</select>
{% endif %}
  <fieldset data-role="controlgroup" data-type="horizontal">
   <legend>Environment:</legend>
{% for path in envs %}
     <input name="env-nav" class="env-nav" id="{{ path.title }}" 
  {% if path.title == env %}  checked="checked" 
  {% endif %} type="radio">
     <label for="{{ path.title }}">{{ path.title }}</label>
{% endfor %}
   </fieldset>
 <form>
  <fieldset data-role="controlgroup" data-type="horizontal" data-mini="true">
    <legend>Density:</legend>
 {% for d in densities %}
     <input name="density-nav" class="density-nav" id="{{ d }}" 
  {% if d == density %}  checked="checked" 
  {% endif %} type="radio">
     <label for="{{ d }}">{{ d }}</label>
{% endfor %}
     </fieldset>
   </form>
  {% if session.logged_in %}

 <br>
<!-- The file upload form used as target for the file upload widget -->
<form id="fileupload" action="{{ url_for('+upload') }}" method="POST" enctype="multipart/form-data">
<!-- Redirect browsers with JavaScript disabled to the origin page -->
<noscript><input type="hidden" name="redirect" value="http://blueimp.github.io/jQuery-File-Upload/"></noscript>
<!-- The fileupload-buttonbar contains buttons to add/delete files and start/cancel the upload -->
<div class="row fileupload-buttonbar">
<div class="col-lg-7">
<!-- The fileinput-button span is used to style the file input field as button -->
<span class="btn btn-success fileinput-button">
<i class="glyphicon glyphicon-plus"></i>
<span>Add files...</span>
<input type="file" name="files[]" multiple>
</span>
<button type="submit" class="btn btn-primary start">
<i class="glyphicon glyphicon-upload"></i>
<span>Start upload</span>
</button>
<button type="reset" class="btn btn-warning cancel">
<i class="glyphicon glyphicon-ban-circle"></i>
<span>Cancel upload</span>
</button>
<button type="button" class="btn btn-danger delete">
<i class="glyphicon glyphicon-trash"></i>
<span>Delete</span>
</button>
<input type="checkbox" class="toggle">
<!-- The global file processing state -->
<span class="fileupload-process"></span>
</div>
<!-- The global progress state -->
<div class="col-lg-5 fileupload-progress fade">
<!-- The global progress bar -->
<div class="progress progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100">
<div class="progress-bar progress-bar-success" style="width:0%;"></div>
</div>
<!-- The extended global progress state -->
<div class="progress-extended">&nbsp;</div>
</div>
</div>
<!-- The table listing the files available for upload/download -->
<table role="presentation" class="table table-striped"><tbody class="files"></tbody></table>
</form>
<br>

   <table>    
   <tr>
    <td>
     <div data-role="collapsible"  data-mini="true" class="sound_upload">
      <h4>Upload</h4>
      <input type="file" name="files[]" multiple="" class="ui-input-text ui-body-c">
     </div>
     </td>
    </tr>
  {% for entry in entries %}
     <tr>
      <td>
       <div data-role="collapsible"  data-mini="true" class="sound_info">
        <h4>{{ entry.title }}</h4>
        <div id="{{ entry.id }}" class="info"></div>
        </div>
      </td>
     <td>
      <button class="ui-btn ui-icon-audio ui-btn-icon-left l_play" \n
          id={{ entry.id }}></button>
      </td>
     <td>
      <form action="{{ url_for('add2blacklist') }}" method="post" class="add-blacklist">
       <input type="image" src="static/bask.png" value="{{ entry.filename }}" name="filename"  class="basket"/>
       </form>
      </td>
     </tr>
{% endfor %}
    </table>
{% else %}
  <p><em>Unbelievable.  No entries here so far</em>
 {% endif %}
   </p>
{% endblock %}
